---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CoverImage from '../components/CoverImage.astro';

---

<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Astro</title>

  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <link rel="stylesheet" href="/style/global.css">
  <link rel="stylesheet" href="https://unpkg.com/tachyons@4.12.0/css/tachyons.min.css" />

  <style>
  </style>
</head>

<body>

  <Header />

  <main class="cf pa3 pa4-m pa5-l mw9 center">
    <div class="black-90 w-100 pb1">
      <h1 class="f4 fw6 f1-ns flex items-center justify-center lh-title measure mt0 mb2">
        Create your list üìù
      </h1>
      <p class="f5 f4-ns lh-copy mt0 mb4 flex items-center justify-center">
        Fill out the form below.
      </p>
    </div>
    <div class="flex items-center justify-center">
      <form class="pa4 black-80">
        <div class="measure mb4">
          <label for="title" class="f6 b db mb2">List title <span class="normal black-60">(purpose of this
              list)</span></label>
          <input id="title" class="input-reset ba b--black-20 pa2 mb2 db w-100" type="text" aria-describedby="title-desc">
          <!-- <small id="title-desc" class="f6 black-60 db mb2">Helper text for the form control.</small> -->
        </div>
        <div class="measure mb5">
          <div>
            <label for="listitem" class="f6 b db mb2">List items</label>
            <textarea id="listitem" name="listitem"
              class="db border-box hover-black w-100 measure ba b--black-20 pa2 br2 mb2"
              aria-describedby="listitem-desc"></textarea>
            <small id="listitem-desc" class="f6 black-60">Write all the items or names separated by a <span
                class="underline">comma</span> or a <span class="underline">line break</span>. For example, "apple,
              orange, banana."</small>
          </div>
        </div>
        <div class="w-100 flex items-center justify-center tl">
          <a class="f6 fw6 dib ba mb4 b--black-20 bg-blue white ph2 ph3-ns pv2 pv3-ns br2 grow no-underline"
            href="/create">
            <span class="dib">Save list ‚Üí</span>
          </a>
        </div>
      </form>

    </div>
  </main>
  <Footer />
</body>

</html>
